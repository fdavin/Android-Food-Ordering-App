<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MenuFragment">

    <SearchView
        android:id="@+id/SearchBar"
        android:layout_width="583dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Makanan"
        android:layout_width="339dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:text="MAKANAN"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SearchBar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMenu"
        android:layout_width="339dp"
        android:layout_height="367dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Makanan"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_menu" />

    <TextView
        android:id="@+id/Minuman"
        android:layout_width="339dp"
        android:layout_height="46dp"
        android:layout_marginRight="2dp"
        android:padding="8dp"
        android:text="MINUMAN"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SearchBar" /> />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMinum"
        android:layout_width="339dp"
        android:layout_height="367dp"
        android:layout_marginStart="0dp"
        android:background="@android:color/transparent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toEndOf="@id/rvMenu"
        app:layout_constraintTop_toBottomOf="@id/Minuman"
        tools:listitem="@layout/item_minum" />

</androidx.constraintlayout.widget.ConstraintLayout>